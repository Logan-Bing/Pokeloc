
<% if @pokemons.length == 0 %>
  <p>Pas de résultats pour cette recherche</p>
<% else %>
  <div class="parent-container">
  <% @pokemons.each do |pokemon| %>
    <%= link_to pokemon_path(pokemon), class: "text-decoration-none text-black" do %>
      <div class="main-container">
        <div class="img-container">
        <% if pokemon.photo.attached? %>
          <%= cl_image_tag(pokemon.photo.key, width: 300, height: 300, crop: :fill, class: "img-pokemon" )%>
        <% else %>
        <% end %>

        </div>
        <div class="info-container">
          <h2><%= pokemon.name %></h2>
          <p><%= pokemon.address %></p>
          <p><strong><%= pokemon.price %> €</strong> par jour</p>
        </div>
      </div>
    <% end %>
  <% end %>
  </div>
<% end %>

<%= link_to "Retour", root_path %>

<%= render "pages/shared/footer" %>
