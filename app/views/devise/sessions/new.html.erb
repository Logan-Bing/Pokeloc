<div class="p-parent-container">
 <div class="p-left-container">
  <div class="p-form-container">
    <div class="back-container">
      <i class="fa-solid fa-arrow-left b-icon"></i>
      <%= link_to "Retour", root_path, class:"b-back" %>
    </div>
    <div class="p-text-container">
      <h1 id="p-title" >Connexion</h1>
    </div>
    <div class="p-info-container">
    <div class="p-image">
      <img src="https://www.123-stickers.com/7722-thickbox/autocollant-miaouss-pokemon-052.jpg" alt="">
    </div>
    <div class="p-form">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
    </div>
    </div>
  </div>
</div>


<%= render "pages/shared/footer" %>
