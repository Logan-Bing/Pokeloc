<!--navbar-->
<%= render "pages/shared/navbar" %>

<!--banner-->
  <div class="banner" >
    <div class="search-container">
      <div class="text-container">
        <h1>PokeLoc</h1>
        <p>Louez votre Pokémon !</p>
      </div>
      <div class="form-container">
        <form class="flex-form" action="/">
          <label for="from">Pokemon</label>
          <input type="search" placeholder="Ex : Pikachu...">
          <input type="submit" value="Recherche">
        </form>
      </div>
      <div class="img-container">
        <img class="sacha" src="https://resize-gulli.jnsmedia.fr/r/890,__ym__/img//var/jeunesse/storage/images/canalj2020/heros/pokemon-saison-23-les-voyages/les-personnages/sasha/28757156-1-fre-FR/Sasha.png" alt="">
      </div>
    </div>
    <div
      style="width: 450px; height: 590px; border-radius: 40px"
      data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"
      class="map-container">
    </div>
  </div>


<div class="parent-container">
 <% @pokemons.each do |pokemon| %>
  <div class="main-container">
    <div class="img-container">
      <%# <%= cl_image_tag(pokemon.photo.key, width: 300, height: 300, crop: :fill, class: "img-pokemon" )%> %>
    </div>
    <div class="info-container">
      <h2><%= pokemon.name %></h2>
      <p><%= pokemon.address %></p>
      <p><strong><%= pokemon.price %> €</strong> par jour</p>
    </div>
  </div>
<% end %>
</div>



<!--footer-->
<%= render "pages/shared/footer" %>
